FROM arm32v6/python:2.7-alpine

MAINTAINER Philip Jay <phil@jay.id.au>

ENV TZ Australia/Melbourne

RUN apk update \
 && apk upgrade \
 && apk add \
      bash \
      curl \
      gcc \
      libusb \
      musl-dev \
      openssl \
      python-dev \
      tzdata \
 && rm -rf /var/cache/apk/*

ADD reqs.frozen /tmp/
RUN pip install -r /tmp/reqs.frozen \
 && rm -rf /root/.cache/

RUN pip install -U pip pylint \
 && rm -rf /root/.cache/
ADD pylint.conf /root/pylint.conf

RUN mkdir -p /opt/temp2dash
ADD *.py /opt/temp2dash/

RUN pylint \
      --persistent=n \
      --rcfile=/root/pylint.conf \
      /opt/temp2dash/*.py

CMD [ "python", "/opt/temp2dash/temp2wemo.py" ]
